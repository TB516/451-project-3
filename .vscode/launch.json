{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch program (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/program",
            "args": ["${input:arg1}", "${input:arg2}"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build",
            "setupCommands": [
                {
                    "description": "Enable pretty printing",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "arg1",
            "type": "promptString",
            "description": "Enter first argument"
        },
        {
            "id": "arg2",
            "type": "promptString",
            "description": "Enter second argument"
        }
    ]
}
